<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
            background-color: #121111;
            
            cursor: pointer;
        }

        ul li {
            color: blue;
        }

        /*.dropdown .dropdown-menu > li > .submenu {
            display: block;
            float: left;
            background-color: white;
            cursor: pointer;
        }*/

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestión Recurso Humano", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @*Menu empleados*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empleados<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("Registrar", "Index", "Home")</li>
                            <li> @Html.ActionLink("Salida", "About", "Home")</li>
                            
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empleados<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li> @Html.ActionLink("Registrar", "Index", "GestionController")</li>
                                        <li> @Html.ActionLink("Salida", "About", "GestionController")</li>
                                        <li> @Html.ActionLink("Registrar Vacaciones", "Contact", "GestionController")</li>
